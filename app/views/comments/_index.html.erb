<div class="media-block ribbon-content comment-item">
  <div class="media-left">
    <%= link_to (image_tag get_avatar_user(comment.user), class: "img-sm item-avatar"), "#",
      data: {toggle: "tooltip", placement: "bottom",
      original_title: comment.user_name} %>
  </div>
  <div class="media-body item-body">
    <div class="mar-btm">
      <h4 class="item-name">
        <%= link_to comment.user_name,
          class: "btn-link text-semibold media-heading box-inline" %>
      </h4>
      <p class="text-muted text-sm item-time">
        <i class="fa fa-clock-o" aria-hidden="true"></i>
        <%= time_ago_in_words comment.created_at %>
      </p>
    </div>
    <p><%= raw comment.content %></p>
    <div class="pad-ver pull-right">
      <%= link_to raw("<i class='fa fa-thumbs-up'></i>"), "#",
        class: "btn btn-sm btn-default btn-hover-success",
        data: {toggle: "tooltip", placement: "bottom",
        original_title: t(".like_comment")} %>
      <%= link_to raw("<i class='fa fa-thumbs-down'></i>"), "#",
        class: "btn btn-sm btn-default btn-hover-success",
        data: {toggle: "tooltip", placement: "bottom",
        original_title: t(".spam")} %>
    </div>
  </div>
</div>
