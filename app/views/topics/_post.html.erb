<% @posts.each do |post| %>
  <div class="listing-grid">
    <div class="row">
      <div class="col-md-2 col-sm-2 col-xs-12 hidden-xs">
        <a data-toggle="tooltip" data-placement="bottom"
          data-original-title="<%= post.user.name %>" href="#">
          <% if post.user.avatar? %>
            <%= image_tag current_user.avatar, class: "img-responsive center-block" %>
          <% else %>
            <%= image_tag "no_avatar.png", class: "img-responsive center-block" %>
          <% end %>
        </a>
      </div>
      <div class="col-md-7 col-sm-8  col-xs-12">
        <h3><a  href="#"> <%= post.title %></a></h3>
        <div class="listing-meta">
          <span>
            <i class="fa fa-clock-o" aria-hidden="true"></i>
            <%= time_ago_in_words post.created_at %>
          </span>
          <span>
            <i class="fa fa fa-eye" aria-hidden="true"></i>
            <%= post.count_view %> <%= t ".view" %>
          </span>
        </div>
      </div>
      <div class="col-md-3 col-sm-2 col-xs-12">
        <ul class="question-statistic">
          <li class="active">
            <a data-toggle="tooltip" data-placement="bottom"
              data-original-title="<%= t ".answers" %>">
              <span><%= post.answers.size %></span>
            </a>
          </li>
          <li>
            <a data-toggle="tooltip" data-placement="bottom"
              data-original-title="<%= t ".votes" %>">
              <span><%= count_vote post %></span>
            </a>
          </li>
        </ul>
      </div>
      <div class="col-md-10 col-sm-10  col-xs-12">
        <p><%= post.content %></p>
        <div class="pull-right tagcloud">
          <% post.tags.each do |tag| %>
            <a href="#"><%= tag.name %></a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% if params[:all] %>
  <div class="text-center clearfix">
    <%= paginate @posts %>
  </div>
<% end %>
