<%= link_to activity.trackable.post.title, post_path(activity.trackable.post) %>
<%= link_to topic_path(activity.trackable.post.topic) do %>
  <span class="badge"><%= activity.trackable.post.topic.name %></span>
<% end %>
<div class="listing-meta">
  <span>
    <i class="fa fa-clock-o" aria-hidden="true"></i>
      <%= t ".activities.on" %> <%= time_ago_in_words activity.created_at %>
  </span>
</div>
