<%= t ".activities.posted" %>
<%= link_to post.title, post_path(activity.trackable) %>
<%= link_to topic_path(post) do %>
  <span class="badge"><%= post.topic_name %></span>
<% end %>
<div class="listing-meta">
  <span>
    <i class="fa fa-clock-o" aria-hidden="true"></i>
      <%= t ".activities.on" %> <%= time_ago_in_words activity.created_at %>
  </span>
</div>
<div class="col-md-10 col-sm-10 col-xs-12">
  <div class="pull-right tagcloud">
    <% post.tags.each do |tag| %>
      <%= link_to tag.name, "#" %>
    <% end %>
  </div>
</div>
